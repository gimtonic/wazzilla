{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@adapters/*": ["./src/adapters/*"],
      "@server/*": ["./src/server/*"],
      "@graphql/*": ["./src/graphql/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@types": ["./src/types"]
    }
  },
  "include": ["./src/**/*", "jest.config.js"]
}
