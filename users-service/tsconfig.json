{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@services/*": ["./src/services/*"],
      "@models/*": ["./src/models/*"],
      "@validators/*": ["./src/validators/*"],
      "@factories/*": ["./src/factories/*"],
      "@types": ["./src/types"]
    }
  },
  "include": ["./src/**/*", "../setup.ts"]
}
